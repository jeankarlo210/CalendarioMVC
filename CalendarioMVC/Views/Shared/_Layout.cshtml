<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Rincon Colonial Eventos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
     
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
            <footer class="text-center">
                <div class="footer-above">
                    <div class="container">
                        <div class="row">
                            <div class="footer-col col-md-4">
                                <h3>Ubicacion</h3>
                                <p>
                                    Boulevard Apodaca 900-B
                                    <br>
                                    Technology Park Apodaca, Nuevo León
                                </p>
                            </div>
                            <div class="footer-col col-md-4">
                                <h3>Around the Web</h3>
                                <ul class="list-inline">
                                    <li>
                                        <a href="http://www.facebook.com/SchneiderElectric" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
                                    </li>

                                    <li>
                                        <a href="http://www.twitter.com/SchneiderElec" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
                                    </li>
                                    <li>
                                        <a href="http://www.youtube.com/schneidercorporate" class="btn-social btn-outline"><i class="fa fa-fw fa-youtube"></i></a>
                                    </li>

                                </ul>
                            </div>
                            <div class="footer-col col-md-4">
                                <h3>Acerca de Rincon Colonial Eventos</h3>
                                <p>Our technologies ensure that Life Is On everywhere, for everyone and at every moment. <a href="https://spiceportal.schneider-electric.com/web/guest/home">Schneider Electric</a>.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-below">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                Copyright &copy; Rincon Colonial Eventos 2019
                            </div>
                        </div>
                    </div>
                </div>
            </footer>

    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>